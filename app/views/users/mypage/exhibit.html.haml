/出品中の商品
=render 'items/header'
.mypage__body
  .nav
    .nav__info
      - breadcrumb :item_exhibit
      = render "layouts/breadcrumbs"
  .buysell__main
    .buysell__container.flex 
      =render "sidebar"
      .buysell--right
        .buysell--right__head
          %h2.buysell--right__head__message 出品した商品
        %ul.buysell--right__items
          %li.buysell--right__items--item.click
            = link_to "/users/mypage/exhibit/#{@user.id}"  do
              %h3 出品中
          %li.buysell--right__items--item
            = link_to "/users/mypage/negotiate/#{@user.id}" do
              %h3 取引中
          %li.buysell--right__items--item
            = link_to "/users/mypage/buyed/#{@user.id}" do
              %h3 売却済み
        = render partial: 'users/mypage/item-buysell', locals: { 'user_items':@user.selling_items ,status: '出品中' ,noitem: '出品中の商品がありません'}
        .bottom-button
          %button.left-button 
            -# link1: ''
            = link_to "/users/mypage/buyed/#{@user.id}"  do
              <
          %button.right-button 
            -# link2: ''
            = link_to "/users/mypage/negotiate/#{@user.id}"  do
              >

=render 'items/footer'