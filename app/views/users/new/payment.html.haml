.payment-main
  .payment-header
    .payment-header__block
      = link_to root_path, class: "payment-header__block__link" do
        = image_tag "fmarket_logo_red.svg", size: "200x55"
  .payment-body
    .payment-word
      お支払い方法
    .payment-info
      = form_for '#' do |f|
        .payment-info__nam
          カード番号
          .payment-info__nam__required
            必須
        = f.text_field :postcode, class: 'payment-info__input', placeholder: '半角数字のみ'
        = image_tag 'cards.jpg',  height: '35px', width: '300px', class: "payment-info__image"
        .payment-info__expiration
          有効期限
          .payment-info__nam__required
            必須
        .payment-info__month
          != sprintf(f.date_select(:expiration_date,with_css_classes:'XXXXX', order:[:month,:day], prompt:"--", use_month_numbers:true, discard_day:true, start_year:Time.now.year-2000, end_year:Time.now.year-2000+10, date_separator:'%s'),'月') + '月'
        .payment-info__year
          != sprintf(f.date_select(:expiration_date,with_css_classes:'XXXXX', order:[:year,:day], prompt:"--", use_month_numbers:true, discard_day:true, start_year:Time.now.year-2000, end_year:Time.now.year-2000+10, date_separator:'%s'),'月') + '年'
        .payment-info__security
          セキュリティコード
          .payment-info__nam__required
            必須
        = f.text_field :postcode, class: 'payment-info__input', placeholder: 'カード背面4行もしくは3行の番号'
        .payment-info__question
          = icon("fas", "question-circle", class: "payment-info__icon")
          .payment-info__question__message
            カードの裏面の番号とは？
        .payment-info__botton
          = link_to "次へ進む", root_path, class: "payment-info__botton__link"
  .payment-footer
    .payment-footer__list
      = link_to "#", class: "payment-footer__list__privacy" do
        .payment-footer__list__privacy__message
          プライバシーポリシー
      = link_to "#", class: "payment-footer__list__privacy" do
        .payment-footer__list__privacy__message
          メルカリ利用規約
      = link_to "#", class: "payment-footer__list__privacy" do
        .payment-footer__list__privacy__message
          特定商取引に関する表記
    = link_to root_path, class: "payment-footer__logo" do
      = image_tag "logo_gray.svg", size: "200x90", class: "payment-footer__logo__icon"
    .payment-footer__company
      © Fmarket, Inc.