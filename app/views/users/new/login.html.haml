.login-page
  =render 'subheader'
  //ボディーの部分
  .login-body
    .login-list
      .login-list__message
        アカウントをお持ちでない方はこちら↓
      .login-list__new
        = link_to "新規会員登録", root_path, class: "login-list__new__link"
    .login-input
      .login-input__fakebook
        = link_to root_path, class: "login-input__fakebook__logo" do
          = icon("fab", "facebook-square")
          .login-input__fakebook__logo__word
            Facebookでログイン
      .login-input__google
        = link_to "#", target: "_blank", class: "login-input__google__logo" do
          = image_tag "G-icon.jpg", size: "19x19"
          .login-input__google__logo__word
            Googleでログイン
      .login-input__info
        = form_for "#" do |f|
          .login-input__info__email
            = f.email_field :content, class: 'login-input__info__email__word', placeholder: '例）tarou@gmail'
          .login-input__info__pass
            = f.password_field :content, class: 'login-input__info__pass__word', placeholder: 'パスワードを入力'
          .login-input__info__verification
            = image_tag 'recaptcha.jpg', height: '75px', width: '300px'
          .login-input__info__botton
            = link_to "ログイン", root_path, class: "login-input__info__botton__link"
          .login-input__info__forget
            = link_to "パスワードをお忘れの方", root_path, class: "login-input__info__forget__link"
            
  =render 'subfooter'
