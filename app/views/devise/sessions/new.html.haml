.login-page
  =render 'users/subheader'
  //ボディーの部分
  .login-body
    .login-list
      .login-list__message
        アカウントをお持ちでない方はこちら↓
      .login-list__new
        = link_to "新規会員登録", new_user_path, class: "login-list__new__link"
    .login-input
      .login-input__fakebook
        = link_to user_facebook_omniauth_authorize_path, method: :post, class: "login-input__fakebook__logo" do
          = icon("fab", "facebook-square")
          .login-input__fakebook__logo__word
            Facebookでログイン
      .login-input__google
        = link_to user_google_oauth2_omniauth_authorize_path, method: :post, class: "login-input__google__logo" do
          = image_tag "G-icon.jpg", size: "19x19"
          .login-input__google__logo__word
            Googleでログイン
      .login-input__info
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .login-input__info__email
            = f.email_field :email, class: 'login-input__info__email__word', autofocus: true, autocomplete: "email", placeholder: '例）tarou@gmail'
          .login-input__info__pass
            = f.password_field :password, class: 'login-input__info__pass__word', autocomplete: "current-password", placeholder: 'パスワードを入力'
          .login-input__info__verification
            = flash.now[:recaptcha_error]
            = recaptcha_tags
          .login-input__info__botton
            = f.submit "ログイン",  class: "login-input__info__botton__link"
          .login-input__info__forget
            = link_to "パスワードをお忘れの方", root_path, class: "login-input__info__forget__link link2"
            
  =render 'users/subfooter'
