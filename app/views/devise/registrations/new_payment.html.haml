.payment-main
  .payment-header
    .payment-header__block
      = link_to root_path, class: "payment-header__block__link" do
        = image_tag "fmarket_logo_red.svg", size: "200x55"
  .payment-body
    .payment-word
      お支払い方法
    .payment-info
      = form_for '#' do |f|
        .payment-info__nam
          カード番号
          .payment-info__nam__required
            必須
        = f.text_field :postcode, class: 'payment-info__input', placeholder: '半角数字のみ', id: 'card_number'
        = image_tag 'cards.jpg',  height: '35px', width: '300px', class: "payment-info__image"
        .payment-info__expiration
          有効期限
          .payment-info__nam__required
            必須
        .payment-info__month
          %select#exp_month{name: "exp_month", type: "text"}
            %option{value: "1"}01
            %option{value: "2"}02
            %option{value: "3"}03
            %option{value: "4"}04
            %option{value: "5"}05
            %option{value: "6"}06
            %option{value: "7"}07
            %option{value: "8"}08
            %option{value: "9"}09
            %option{value: "10"}10
            %option{value: "11"}11
            %option{value: "12"}12
          %i.card-form-expire-icon
          %span{class: "month"} 月
        .payment-info__year
          %select#exp_year{name: "exp_year", type: "text"}
            %option{value: "2019"}19
            %option{value: "2020"}20
            %option{value: "2021"}21
            %option{value: "2022"}22
            %option{value: "2023"}23
            %option{value: "2024"}24
            %option{value: "2025"}25
            %option{value: "2026"}26
            %option{value: "2027"}27
            %option{value: "2028"}28
            %option{value: "2029"}29
          %i.card-form-expire-icon
          %span{class:"year"} 年

        .payment-info__security
          セキュリティコード
          .payment-info__nam__required
            必須 
        = f.text_field :cvc, class: 'payment-info__input', placeholder: 'カード背面4行もしくは3行の番号', id: "cvc"
        .payment-info__question
          = icon("fas", "question-circle", class: "payment-info__icon")
          .payment-info__question__message
            カードの裏面の番号とは？
        .payment-info__botton
          = f.submit "次へ進む",class: "payment-info__botton__link", id: "token_submit"
  .payment-footer
    .payment-footer__list
      = link_to "#", class: "payment-footer__list__privacy" do
        .payment-footer__list__privacy__message
          プライバシーポリシー
      = link_to "#", class: "payment-footer__list__privacy" do
        .payment-footer__list__privacy__message
          メルカリ利用規約
      = link_to "#", class: "payment-footer__list__privacy" do
        .payment-footer__list__privacy__message
          特定商取引に関する表記
    = link_to root_path, class: "payment-footer__logo" do
      = image_tag "logo_gray.svg", size: "200x90", class: "payment-footer__logo__icon"
    .payment-footer__company
      © Fmarket, Inc.