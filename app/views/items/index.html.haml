      人気のブランド
      .toppage__category__heading__type
        =link_to "シャネル", '#', class: "toppage__category__heading__type__btn",id:'chanel'
        =link_to "ルイヴィトン", '#', class: "toppage__category__heading__type__btn",id:'vuitton'
        =link_to "シュプリーム", '#', class: "toppage__category__heading__type__btn",id:'shup'
